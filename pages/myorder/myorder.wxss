/* pages/myorder/myorder.wxss */
page{
  background-color:#f0f0f0;
}
.nav{
  margin:0 3% 0 3%;
  /* background:#f0f0f0; */
}
.back{
  float:left;
  margin:0px 0 0 37%;
}
.sel{
  /* border:1px solid red; */
  width:100%;
  height:66px;
  line-height:66px;
}


.mid{
  border:1px solid white;
  border-radius:10px;
  width:100%;
  background-color:white;
}
.order{
  border:0px solid red;
  height:48px;
  width:100%;
  font-size:14px;
  color:#4a4a4a;
  border-bottom:0.5px solid #c4c4c4;
  font-family:PingFangSC-Light;

}
.goods{
  border:0px solid red;
  margin:0 5% 0 5%;
  width:90%;
  height:100%;
}
.font1{
font-size:12px;
font-family:PingFang-Light;
color:#4a4a4a;

}
.order-produce{
  border:0px solid blue;
  margin-top:16px;
  height:96px;
}
.message-produce{
  border:0px solid red;
  float:left;
  height:96px;
  width:57%;
  margin-left:16px;
}
.goods-name{
  border:0px solid red;
  font-family:PingFangSC;
  font-size:14px;
  width:100%;
  color:#2c2c2c;
}
.goods-price{
  
  font-family:San-Francisco-Display-Bold;
  font-size:18px;
  color:#f5115c;
  float:left;
}
.goods-amount{
  /* position:relative; */
  float:right;
  font-family:San-Francisco-Display-Medium;
  font-size:14px;
  color:#4a4a4a;
}
.sum{
  /* border:1px solid red; */
  border-top:1px solid #c4c4c4;
  border-bottom:1px solid #c4c4c4;
  margin-top:24px;
  line-height:44px;
  font-family:PingFangSC;
  font-size:14px;
  color:#2c2c2c;
}
.btn{
  width:91px;
  height:35px;
  font-size:14px;
  font-family:PingFangSC;
  color:#6200ff;
  background-color:f3edfb;
  border-radius:25px;
  margin-right:5px;
  margin-top:16px;
  margin-bottom:16px;
  vertical-align:middle;
}
.btn::after{
   border:0;
}
